<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mani"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/customtextview"
            android:layout_gravity="center"
            android:layout_margin="15dp">
            <Spinner
                android:id="@+id/s_materialsubject"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:gravity="center"></Spinner>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Chapter Title:"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/et_chaptertitle"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customtextview"
            android:layout_gravity="center"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Chapter Description:"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/et_chapterdescription"
            android:layout_width="270dp"
            android:layout_height="300dp"
            android:background="@drawable/customtextview"
            android:layout_gravity="center"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:lines="10"
            android:padding="5dp"/>

        <Button
            android:id="@+id/b_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/SchoolBlue"
            android:text="Submit"
            android:textColor="@color/White"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>