<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mani"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Date:"
            android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtextview"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="13dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Class:"
            android:layout_marginRight="5dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/customtextview"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp">
            <Spinner
                android:id="@+id/s_class"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="center"></Spinner>
        </RelativeLayout>
</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Homework Title:"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/et_hwtitle"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customtextview"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Homework Description:"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/et_hwdescription"
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:background="@drawable/customtextview"
            android:layout_gravity="center"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:lines="10"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/b_attachments"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@color/SchoolBlue"
                android:text="Attachments"
                android:textColor="@color/White"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/tv_attachments"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtextview"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/b_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/SchoolBlue"
            android:text="Submit"
            android:textColor="@color/White"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>