<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/mani">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Roll No:"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"/>
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customtextview"
            android:layout_gravity="center"
            android:layout_weight="0.9">
            <Spinner
                android:id="@+id/s_rollno"
                android:layout_width="match_parent"
                android:layout_height="30dp"></Spinner>
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="class:"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"/>

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customtextview"
            android:layout_gravity="center"
            android:layout_weight="0.9">
            <Spinner
                android:id="@+id/s_class"
                android:layout_width="match_parent"
                android:layout_height="30dp"></Spinner>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Section:"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"/>

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customtextview"
            android:layout_gravity="center"
            android:layout_weight="0.9">
            <Spinner
                android:id="@+id/s_section"
                android:layout_width="match_parent"
                android:layout_height="30dp"></Spinner>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Subject:"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"/>

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customtextview"
            android:layout_gravity="center"
            android:layout_weight="0.9">
            <Spinner
                android:id="@+id/s_subject"
                android:layout_width="match_parent"
                android:layout_height="30dp"></Spinner>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Exam:"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"/>

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customtextview"
            android:layout_gravity="center"
            android:layout_weight="0.9">
            <Spinner
                android:id="@+id/s_exam"
                android:layout_width="match_parent"
                android:layout_height="30dp"></Spinner>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Maximum Marks:"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"/>
        <EditText
            android:id="@+id/et_maxmarks"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:background="@drawable/customtextview"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:text="Marks Obtained:"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"/>
        <EditText
            android:id="@+id/et_marksobtained"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/SchoolBlue"
            android:textSize="20dp"
            android:background="@drawable/customtextview"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:inputType="number"/>
    </LinearLayout>

    <Button
        android:id="@+id/b_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/SchoolBlue"
        android:text="Submit"
        android:textColor="@color/White"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/b_bulkentry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SchoolBlue"
        android:text="Bulk Entry"
        android:textColor="@color/White"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_bulkpath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/SchoolBlue"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>