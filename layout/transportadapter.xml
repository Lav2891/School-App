<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/transportoutline"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginTop="6dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/startpointone"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Start Point"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text=":" />
                <TextView
                    android:id="@+id/tv_startpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="2"
                    android:scrollbars="vertical"
                    android:lines="1"
                    android:gravity="top|left"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/parkingone"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text="End Point"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text=":" />
                <TextView
                    android:id="@+id/tv_endpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="2"
                    android:scrollbars="vertical"
                    android:lines="1"
                    android:gravity="top|left"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vehicletypeone"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Vehicle Type"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text=":" />
                <TextView
                    android:id="@+id/tv_vehicletype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/noplateone"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Vehicle No"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text=":" />
                <TextView
                    android:id="@+id/tv_vehiclenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/noofstudentsone"
                    android:layout_margin="2dp"
                   android:layout_gravity="center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text="No of Students"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:text=":" />
                <TextView
                    android:id="@+id/tv_numberofstudents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>