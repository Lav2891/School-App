<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mani">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true" />
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="SCHOOL NAME"
        android:textColor="@color/SchoolBlue"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="@color/SchoolBlue"
        android:textAlignment="center"
        android:typeface="monospace"
        android:text="@string/school_address"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dividerline"
        android:layout_gravity="center"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    <Button
        android:id="@+id/b_student"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/SchoolBlue"
        android:gravity="center"
        android:padding="10dp"
        android:text="Student"
        android:textColor="@color/White"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_margin="4dp"/>

        <Button
            android:id="@+id/b_parent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/SchoolBlue"
            android:gravity="center"
            android:padding="10dp"
            android:text="Parent"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/b_teacher"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/SchoolBlue"
            android:gravity="center"
            android:padding="10dp"
            android:text="Teacher"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_margin="4dp"/>
    </LinearLayout>
</LinearLayout>
